{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "outDir": "./build/",
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDirs": [
      "src"
    ],
    "baseUrl": "src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
